<cmdopt command="mkudfimg">
    <!--MAIN-->
    <opt name="version" choice="opt" rep="norepeat" group-id="main">
        <description>
            <para>Show prgram version.</para>
        </description>
    </opt>
    <opt name="checksum" choice="opt" rep="norepeat" group-id="main">
        <description>
            <para>Add a checksum file.</para>
        </description>
    </opt>
    <opt name="output" char="o" rep="norepeat" choice="plain" group-id="build">
        <replaceable>FILE</replaceable>
        <description>
            <para>Write image to file.
                Use
                <quote>-</quote>to write to STDOUT.
                Use
                <quote>NUL</quote>to write to nothing.
            </para>
        </description>
    </opt>
    <opt char="V" choice="opt" rep="norepeat" group-id="main">
        <replaceable>LABEL</replaceable>
        <description>
            <para>The volume label.</para>
        </description>
    </opt>
    <opt name="hd" choice="opt" rep="norepeat" group-id="main">
        <description>
            <para>Use block size of 512 bytes inste of 2048.</para>
        </description>
    </opt>    
    <opt name="compact" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Try to use empty blocks to save space.</para>
        </description>
    </opt>    
    <opt name="zero-size" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Set all file size to zero.</para>
        </description>
    </opt>    
    <opt name="cache-inodes" choice="opt" rep="norepeat" group-id="main">
        <description>
            <para>Cache inodes to detect hard links and avoid duplicate files.</para>
        </description>
    </opt>
    <opt name="trim-empty-file" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Remove empty files.</para>
        </description>
    </opt>
    <opt name="trim-empty-dir" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Remove empty directories.</para>
        </description>
    </opt>
    <opt name="trim-empty" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Remove empty files and directories.</para>
        </description>
    </opt>
    <!---->
    <!--TODO: time format-->
    <opt name="include" char="I" choice="opt" rep="repeat" group-id="main">
        <replaceable>DIR</replaceable>
        <description>
            <para>Add a directory where to search a file.</para>
        </description>
    </opt>
    <!--BUILD-->
    <opt name="config" char="p" choice="opt" rep="repeat" group-id="build">
        <replaceable>FILE</replaceable>
        <description>
            <para>Path to Configuration/Mapping file.</para>
            <!--TODO: link to map file format-->
        </description>
    </opt>

    <opt name="manifest" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>Creates a manifest file.</para>
            <!--TODO: link to manifest file format-->
        </description>
    </opt>
    <opt name="archive" choice="opt" rep="norepeat" group-id="build">
        <description>
            <para>After the image is made, unset the Archive attribute of the files (For Windows OS).</para>
        </description>
    </opt>

    <!--UDF-->
    <opt name="volume-id" char="V" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>NAME</replaceable>
        <description>
            <para>Logical Volume Identifier (ECMA-167 10.6.4). The volume label.</para>
        </description>
    </opt>
    <opt name="volset" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>NAME</replaceable>
        <description>
            <para>The Volume Set Identifier (ECMA-167 10.1.11). Volume set of which the volume is a member.</para>
        </description>
    </opt>
    <opt name="application-id" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>NAME</replaceable>
        <description>
            <para>The Application Identifier.</para>
        </description>
    </opt>
    <opt name="fileset-id" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>NAME</replaceable>
        <description>
            <para>The File Set Identifier (ECMA-167 14.1.12).</para>
        </description>
    </opt>
    <opt name="copyright" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>FILENAME</replaceable>
        <description>
            <para>File in the root directory containing an copyright statement (ECMA-167 14.1.13).</para>
        </description>
    </opt>
    <opt name="abstract" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>FILENAME</replaceable>
        <description>
            <para>File in the root directory containing an abstract (ECMA-167 14.1.14).</para>
        </description>
    </opt>
    <opt name="rec-mtime" choice="opt" rep="norepeat" group-id="udf">
        <replaceable>DATETIME</replaceable>
        <description>
            <para>Sets the record time to
                <option>DATETIME</option>.
            </para>
        </description>
    </opt>
    <!--LIST-->
    <opt name="wx-ctime" choice="opt" rep="norepeat" group-id="list">
        <description>
            <para>Include Change/Creation Time.</para>
        </description>
    </opt>
    <opt name="wx-mtime" choice="opt" rep="norepeat" group-id="list">
        <description>
            <para>Include Modification Time.</para>
        </description>
    </opt>
    <!--CMD-GROUP-->
    <cmd-group group-id="main" name="Main">
        <description>
            <para>Main Options</para>
        </description>
    </cmd-group>
    <cmd-group group-id="build" name="Build">
        <description>
            <para>Build Options</para>
        </description>
    </cmd-group>
    <cmd-group group-id="list" name="List">
        <description>
            <para>List Options. Options for building XML Files Tree</para>
        </description>
    </cmd-group>
    <cmd-group group-id="udf" name="UDF">
        <description>
            <para>UDF Options</para>
        </description>
    </cmd-group>
</cmdopt>